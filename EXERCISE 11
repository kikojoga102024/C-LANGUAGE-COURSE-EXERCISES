#include <stdio.h>
int main() {
	float nota1, nota2, nota3, media;
	printf("Informe a primeira nota: ");
	scanf_s("%f", &nota1);
	printf("Informe a segunda nota: ");
	scanf_s("%f", &nota2);
	printf("Informe a terceira nota: ");
	scanf_s("%f", &nota3);
	media = (nota1 + nota2 + nota3) / 3;
	printf("A media do aluno = %.2f\n", media);
	return 0;
}
